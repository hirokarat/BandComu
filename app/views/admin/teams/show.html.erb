<div class="container mt-5 mb-5">
  <div class="card mb-3 mx-auto">
    <%= image_tag @team.get_header_image(500,500)%>
      <div class="card-body">
        <h3 class="card-title display-6"><%= @team.name%></h3>
        <p class="card-text">楽団説明</p>
        <p class="card-text"><small class="text-muted">更新日:<%= @team.updated_at.to_s(:datetime_jp)%></small></p>
      </div>
  </div>
<%= image_tag @team.get_profile_image(100,100), class:"rounded-circle" %>
  <table class="table table-bordered mt-4">
    <tr>
      <td class="table-active border border-dark">ジャンル</td>
      <td class="border border-dark"><%= @team.genre%></td>
    </tr>
    <tr>
      <td class="table-active border border-dark">募集パート</td>
      <td class="border border-dark"><%= @team.part%></td>
    </tr>
    <tr>
      <td class="table-active border border-dark">募集条件</td>
      <td class="border border-dark"><%= @team.condition%></td>
    </tr>
    <tr>
      <td class="table-active border border-dark">活動費用（毎月）</td>
      <td class="border border-dark"><%= @team.cost%>円</td>
    </tr>
    <tr>
      <td class="table-active border border-dark">練習日</td>
      <td class="border border-dark"><%= @team.practice_date%></td>
    </tr>
    <tr>
      <td class="table-active border border-dark">練習場所</td>
      <td class="border border-dark"><%= @team.practice_area%></td>
    </tr>
    <tr>
      <td class="table-active border border-dark">活動エリア</td>
      <td class="border border-dark"><%= @team.area%></td>
    </tr>
    <tr>
      <td class="table-active border border-dark">バンド人数</td>
      <td class="border border-dark"><%= @team.count%></td>
    </tr>
    <tr>
      <td class="table-active border border-dark">連絡先</td>
      <td class="border border-dark"><%= @team.email%></td>
    </tr>
    <tr>
      <td class="table-active border border-dark">主な演奏先</td>
      <td class="border border-dark"><%= @team.location%></td>
    </tr>
  </table>
  
  <div class="mt-3">
    <%= link_to "削除",admin_team_path(@team.id), class:"btn btn-danger col-1", method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <%= link_to "チームの活動日誌", user_index_admin_journal_path, class: "btn btn-success ms-4"%>
  </div>
  
</div>