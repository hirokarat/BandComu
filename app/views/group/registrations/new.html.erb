<div class="container">
  <div class="form-horizontal">
    <h2><mark>新規会員登録</mark></h2>
    <div class="mt-5">
      <%= form_with model: @team, url: team_registration_path, local: true  do |f| %>
      <%= render "group/shared/error_messages", resource: resource %>
      
      <div class="form-group row">
      <%= f.label "楽団名", class: "col-3" %>
      <%= f.text_field :name, autocomplete: "name", placeholder: "BandMan",class: "col-2 me-4" %>
      </div>
      
      <div class="form-group row">
      <%= f.label "バンドの人数", class: "col-3" %>
      <%= f.select :count, *[1..70] %>
      </div>
      
      <div class="form-group row">
      <%= f.label "ジャンル", class: "col-3" %>
      <%= f.select :genre, Team.genres.keys, {} %>
      </div>
      
      <div class="form-group row">
      <%= f.label "活動エリア", class: "col-3" %>
      <%= f.select :area, Team.areas.keys, {} %>
      </div>
      
      <div class="form-group row">
      <%= f.label "募集パート", class: "col-3" %>
      <%= f.text_field :part, autocomplete: "part", placeholder: "ギター経験2年、ベース経験1年",class: "col-2 me-4" %>
      </div>
      
      <div class="form-group row">
      <%= f.label "募集条件", class: "col-3" %>
      <%= f.text_field :condition, autocomplete: "condition", placeholder: "18歳以上、未経験歓迎",class: "col-2 me-4" %>
      </div>
      
      <div class="form-group row">
      <%= f.label "活動費用", class: "col-3" %>
      <%= f.text_field :cost, autocomplete: "cost",class: "col-2 me-4" %>円
      </div>
     
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder: "hanako.yanmada@gmail.com", class: "col-3" %>
      </div>
      
      <div class="form-group row">
      <%= f.label "練習日", class: "col-3" %>
      <%= f.text_field :practice_date, autocomplete: "practice_date", placeholder: "毎週日曜日",class: "col-2 me-4" %>
      </div>
      
      <div class="form-group row">
      <%= f.label "練習場所", class: "col-3" %>
      <%= f.text_field :practice_area, autocomplete: "practice_area", placeholder: "〇〇ホール",class: "col-2 me-4" %>
      </div>
      
      <div class="form-group row">
      <%= f.label "演奏先", class: "col-3" %>
      <%= f.text_field :location, autocomplete: "location", placeholder: "〇〇ホール",class: "col-2 me-4" %>
      </div>
    
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
     </div>
  </div>
</div>
