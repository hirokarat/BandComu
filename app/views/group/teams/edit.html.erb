<div class="container-xxl mt-5 mx-5">

  <h2><mark>会員情報編集</mark></h2>

  <div class="d-flex justify-content-center mt-5" style="">
    <%= form_with model: @team,url: group_team_path(@team), method: :PATCH, class: "col-9", local: true do |f| %>

    <div>
      <%= f.label "名前", class: "col-4" %>
      <%= f.text_field :name, autocomplete: "last_name", class: "col-3 me-4" %>
    </div>

    <div class="mt-3">
      <%= f.label "電話番号", class: "col-4" %>
      <%= f.text_field :count, autocomplete: "count", class: "col-4" %>人
    </div>

    <div class="mt-3">
      <%= f.label "メールアドレス", class: "col-4" %>
      <%= f.email_field :email, autocomplete: "email", class: "col-7" %>
    </div>

    <div class="actions mt-5 mx-auto" style="width:500px;">
        <%= f.submit "編集内容を保存", class: "btn btn-success mr-5" %>
    </div>
    <% end %>
  </div>
</div>