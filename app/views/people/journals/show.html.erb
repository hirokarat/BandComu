<div class="container mt-4">
 <h2><mark><%= @journal.team.name%>の活動日誌</mark></h2>
 <div class="card mb-3 mt-4">
    <%= image_tag @journal.activity_image,class:"card-img-top h-100"%>
    <div class="card-body">
      <h5 class="card-title">投稿者:<%= @journal.team.name%></h5>
      <p class="card-text"><%=@journal.journal %></p>
      <p class="card-text"><small class="text-muted"><%= @journal.created_at.to_s(:datetime_jp)%></small></p>
      <i class="fas fa-tag"><%= @journal.tags.map(&:name).join(', ') %></i>
      <p><%= link_to 'このユーザーの詳細へ', people_team_path(@journal.team_id)%></p>
       <% @journal_tags.each do |tag| %>
       <%= link_to tag.name,search_tag_people_journals_path(tag_id: tag.id)%><%="(#{tag.journals.count})" %>
       <% end %>
    </div>
  </div>
 </div>