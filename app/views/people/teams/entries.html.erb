<div class="container">
  <div class="pt-5">
    <h2><mark>応募したチーム</mark></h2>
    <table class="table">
      <tr class="table-active">
        <th>団体名</th>
        <th>活動エリア</th>
        <th>ジャンル</th>
        <th>メールアドレス</th>
      </tr>
      <% @entries.each do |entry| %>
      <tr>
        <td>
          <%= link_to entry.team.name, people_team_path(entry.team),  class: "text-dark"%>
        </td>
        <td><%= entry.team.area%></td>
        <td><%= entry.team.genre %></td>
        <td><%= entry.team.email%></td>
      </tr>
    <% end %>
    </table>
    <div class="pagination justify-content-center">
     <%= paginate @entries, theme: 'bootstrap-5'%>
    </div>
  </div>
</div>